<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Light gray when pressed -->
            <corners android:radius="50dp" /> <!-- Full rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#F5F5F5" /> <!-- Default light gray color -->
            <corners android:radius="50dp" /> <!-- Full rounded corners -->
            <stroke android:width="1dp" android:color="#C0C0C0" /> <!-- Light border -->
        </shape>
    </item>
</selector>
