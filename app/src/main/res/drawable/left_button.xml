<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#000000" /> <!-- Black color when selected -->
            <corners android:topLeftRadius="50dp" android:bottomLeftRadius="50dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#000000" /> <!-- Gray color when not selected -->
            <corners android:topLeftRadius="50dp" android:bottomLeftRadius="50dp" />
            <stroke android:width="1dp" android:color="#C0C0C0" />
        </shape>
    </item>
</selector>
