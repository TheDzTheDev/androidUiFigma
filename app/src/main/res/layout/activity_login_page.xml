<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginPage"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/loginTextLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="72.80dp"
        android:paddingLeft="52.00dp"
        android:paddingRight="52.00dp">

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="2.60dp"
            android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                android:layout_marginTop="36.80dp"
                android:paddingLeft="20.00dp"
                android:paddingRight="20.00dp">

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="By signing in you are agreeing our Term and privacy policy"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="2.60dp"
                    android:layout_centerHorizontal="true" />
                    <LinearLayout
                        android:layout_below="@id/terms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/loginTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            android:layout_marginEnd="16dp"
                            android:clickable="true" />


                        <TextView
                            android:id="@+id/registerTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register"
                            android:textSize="16sp"
                            android:textColor="#A9A9A9"
                            android:clickable="true" />
                    </LinearLayout>
            </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loginLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_below="@+id/loginTextLayout"
        android:layout_marginTop="56dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        >

        <EditText
            android:id="@+id/usernameTF"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:fontFamily="@font/poppins"
            android:drawablePadding="5dp"
            android:hint="Email Address"
            android:imeOptions="actionNext"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:singleLine="true"
            android:textColorHint="#DCDCDC"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_person"
            android:drawableRight="@drawable/baseline_email_24"
            android:background="@drawable/btn_tf_border"/>

        <EditText
            android:id="@+id/passwordTF"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/usernameTF"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="16dp"
            android:hint="Password"
            android:imeOptions="actionSend"
            android:inputType="textPassword"
            android:paddingLeft="11dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableRight="@drawable/scaled_ic_close_eyes"
            android:drawablePadding="5dp"
            android:paddingRight="11dp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textColorHint="#DCDCDC"
            android:textSize="12dp"
            android:background="@drawable/btn_tf_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/loginButton"
            android:background="@drawable/btn_login_border"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/passwordTF"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="visible"
            />
            <LinearLayout
                android:id="@+id/linearRememberForgot"
                android:layout_below="@id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_below="@id/loginButton"
                        android:text="Remember Password"
                        android:textColor="#D4C5C5"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password"
                        android:textColor="#0386D0"
                        android:textSize="14sp"
                        android:layout_marginEnd="8dp"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/oauth"
                android:layout_marginTop="36dp"
                android:layout_below="@id/linearRememberForgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or connect with"
                    android:textColor="#747070"
                    android:textSize="16dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        <LinearLayout
            android:id="@+id/oauthImage"
            android:layout_below="@id/oauth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/linkedin"
                android:paddingRight="16dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/github"
                android:paddingRight="16dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook"
                android:paddingRight="16dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/google" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_below="@id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/footer_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/subtractlarge" />

<!--        <ImageView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/fingerprint"-->
<!--            android:gravity="center"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginBottom="50dp"-->
<!--            android:layout_alignBottom="@+id/footer_image" />-->

    </RelativeLayout>
</RelativeLayout>